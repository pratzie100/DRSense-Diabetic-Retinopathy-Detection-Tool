{
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
          "setup": {
            "pkgs": ["python3.9", "gcc", "curl"],
            "cmds": [
              "curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py",
              "python3.9 get-pip.py"
            ]
          },
          "install": {
            "cmds": ["pip install --no-cache-dir -r backend-requirements.txt"]
          },
          "build": {
            "cmds": []
          },
          "start": {
            "cmd": "gunicorn app:app --workers 1 --timeout 300"
          }
        }
      }
    }
  }